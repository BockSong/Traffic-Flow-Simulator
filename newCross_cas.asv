function [update_plaza,flag] = newCross_cas(plaza,cross_point)

update_plaza = plaza;
r = rand();
flag = 0;
%if r<0.25
for i=2:7
    if plaza(cross_point,i) == 1 || plaza(cross_point,i) == -2 ||plaza(cross_point,i) == -3  plaza(cross_point,i) == 1
        flag = flag+1;
        %update_plaza(cross_point,2) = 1;
    end
end
%end
